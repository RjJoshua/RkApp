@page
@model Index
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                City
                <div class="btn-group" role="group" aria-label="">
                    <a href="~/index?sortBy=city&sortAsc=false" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-down"></i></a>
                    <a href="~/index?sortBy=city&sortAsc=true" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-up"></i></a>
                </div>
            </th>
            <th scope="col">
                Temperature
                <div class="btn-group" role="group" aria-label="">
                    <a href="~/index?sortBy=temperature&sortAsc=false" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-down"></i></a>
                    <a href="~/index?sortBy=temperature&sortAsc=true" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-up"></i></a>
                </div>
            </th>
            <th scope="col">
                Humidity
                <div class="btn-group" role="group" aria-label="">
                    <a href="~/index?sortBy=humidity&sortAsc=false" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-down"></i></a>
                    <a href="~/index?sortBy=humidity&sortAsc=true" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-up"></i></a>
                </div>
            </th>
            <th scope="col">
                Air Speed
                <div class="btn-group" role="group" aria-label="">
                    <a href="~/index?sortBy=airspeed&sortAsc=false" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-down"></i></a>
                    <a href="~/index?sortBy=airspeed&sortAsc=true" type="button" class="btn btn-secondary"><i class="bi bi-arrow-bar-up"></i></a>
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var weatherItem in Model.WeatherItems)
        {
            <tr>
                <td>@weatherItem.City</td>
                <td>@weatherItem.Temperature</td>
                <td>@weatherItem.Humidity</td>
                <td>@weatherItem.AirSpeed</td>
            </tr>
        }
    </tbody>
</table>
